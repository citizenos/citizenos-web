#header
    min-height 500px
    background-repeat no-repeat
    background-position center top
    background-size cover
    background-image url('/assets/images/webinar-header.png')

    h1
        color #FFFFFF
        font-size 46px
        font-weight bold
        line-height 64px
        text-align center
#text
    background-color #FFFFFF

#join
    border-radius 6px
    background-color #F7F7F7

    h2
        font-size 22px

#footer
    min-height 150px
    background #F7F7F7
    font-size 14px

#mce-EMAIL
    outline none

#mc_embed_signup #mc-embedded-subscribe-form div.mce_inline_error
    margin-bottom 0px !important
    padding-left 0px !important

@media only screen and (max-width: 576px)
    #header
        h1
            font-size 32px
            line-height 40px
