#newsletter
    .modal-content
        border none
        border-radius 10px

    .modal-body
        color #FFFFFF
        background linear-gradient(180deg, #0EB7FE 0%, #0680FC 100%)
        border-top-left-radius 10px
        border-top-right-radius 10px

        text-align center

        button
            color #FFFFFF
            font-weight normal

        h3
            font-size 26px
            font-weight bold
            line-height 22px

        p
            font-size 16px
            line-height 22px

        img
            float left
            width 80%

    .modal-footer
        background-color #F1F1F1
        border-bottom-left-radius 10px
        border-bottom-right-radius 10px

        form
            background #FFFFFF
            border 1px solid #DCDCDC
            border-radius 20px
            box-shadow inset 2px 2px 3px 0 rgba(0, 0, 0, 0.1)

        input
            border none
            outline none

            &:focus
                outline none
