mixin section-media(data = {})
    -
        data = { ...data, ...attributes }

        const sectionData = { ...data }
        delete sectionData.title
        delete sectionData.text

        const textClass = {
            'lg_order-2': data.mediaLeft
        }

        const mediaClass = {
            'lg_order-1': data.mediaLeft
        }
    +section(sectionData)
        .grid.grid-cols-1.lg_grid-cols-2.gap-10
            .pt-12.pb-0.md_pb-8.lg_py-0(class=textClass)
                if data.title
                    h2.text-center.lg_text-left= data.title
                if data.text
                    .text-center.lg_text-left
                        +markdown(data.text)
            div(class=mediaClass)
                if data.video
                    a.w-full.aspect-vhs.flex.items-center.justify-center.bg-white.bg-cover.rounded-2xl(
                        href=data.video
                        target='_blank'
                        style=`background-image: url('${data.image}')`
                    )
                        img.h-20.w-20.md_h-32.md_w-32(src='/assets/v2/images/icons/play.svg')
                else
                    img.w-full(src=data.image)

mixin section-accordion(data = {})
    -
        data = { ...data, ...attributes }

        const sectionData = { ...data }
        delete sectionData.title
        delete sectionData.text

        const id = `accordion-${Math.round(Math.random() * 1000)}`
    +section(sectionData)
        .grid.grid-cols-1.lg_grid-cols-2.gap-10
            .hidden.lg_block
                for card, idx in data.cards
                    if card.image
                        img.accordion-image-lg.w-full.object-fill.rounded-2xl(id=`${id}-image-${idx}` class=card.color src=card.image)
            div
                .pb-8.text-center.lg_text-left
                    if data.title
                        h2= data.title
                    if data.text
                        +markdown(data.text)
                for card, idx in data.cards
                    .accordion-card.py-6.px-6.border-t.first_border-t-0.border-grey-300(class=[`${id}-card`, card.color] data-image=`${id}-image-${idx}`)
                        if card.image
                            img.accordion-image.lg_hidden.mb-4.h-60.md_h-80.w-full.object-fill(src=card.image)
                        .accordion-title.flex.items-center
                            if card.icon
                                img.h-6.w-6.mr-4(src=card.icon)
                            h3.text-xl.font-semibold.text-yellow-700= card.title
                        if card.text
                            .accordion-body.mt-4
                                +markdown(card.text)
                                if card.link
                                    a.flex.items-center.font-bold.text-green-500(href=card.link.url)
                                        img.h-6.w-6.mr-2(src='/assets/v2/images/icons/arrow-small-right.svg')
                                        = card.link.title

        script.
            const cards = document.querySelectorAll('.#{id}-card');
            let activeCard = null

            activateCard(cards[0])

            cards.forEach((card) => {
                card.addEventListener('click', () => { activateCard(card) })
            })

            function activateCard(card) {
                if (activeCard) {
                    document.getElementById(activeCard.dataset.image).classList.remove('active')
                    activeCard.classList.remove('active')
                    if (activeCard.nextElementSibling) activeCard.nextElementSibling.classList.remove('border-t-transparent')
                }

                document.getElementById(card.dataset.image).classList.add('active')
                card.classList.add('active')
                if (card.nextElementSibling)card.nextElementSibling.classList.add('border-t-transparent')

                activeCard = card
            }

mixin button(data = {})
    -
        data = { ...data, ...attributes }

        const btnClass = {
            'py-4 px-10': data.title,
            'p-4': !data.title,
            'pl-8': data.title && data.icon,
            'hover_!shadow-none': true,
            [data.class]: true
        }

        const iconClass = {
            'mr-2': data.title
        }
    a.button.inline-flex.items-center.justify-center.cursor-pointer.font-semibold.whitespace-nowrap.rounded-full.border-2.hover_bg-transparent(
        id=data.id
        href=data.url
        target=data.target
        class=btnClass
    )&attributes(attributes)
        if data.icon
            img.h-6.w-6(src=data.icon class=iconClass)
        = data.title

mixin button-primary(data = {})
    -
        data = { class: '', ...data, ...attributes }
        data.class += ' text-white border-black bg-black hover_text-black hover_border-black'
    +button(data)

mixin button-secondary(data = {})
