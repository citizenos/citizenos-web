mixin markdown(text='')
    | !{ self.md(text) }

mixin section()
    div(class=attributes.class)
        .container.mx-auto.py-32.px-28
            if attributes.title
                h2= attributes.title
            if attributes.text
                .px-28.pb-8.text-center
                    +markdown(attributes.text)

            block

mixin button()
    -
        btnClass = {
            'py-4 px-10': attributes.title,
            'p-4': !attributes.title,
            'pl-8': attributes.title && attributes.icon,
            'hover_!shadow-none': true,
            [attributes.class]: true
        }
        iconClass = {
            'mr-2': attributes.title
        }

    a.button.inline-flex.items-center.cursor-pointer.font-semibold.rounded-full.border-2.hover_bg-transparent(
        href=attributes.url
        target=attributes.target
        class=btnClass
    )&attributes(attributes)
        if attributes.icon
            img.h-6.w-6(src=attributes.icon class=iconClass)
        = attributes.title

mixin button-primary()
    - attributes.class += ' text-white border-black bg-black hover_text-black hover_border-black'
    +button()&attributes(attributes)

mixin button-secondary()
    - attributes.class += ' text-black border-white bg-white hover_border-black'
    +button()&attributes(attributes)

mixin button-grey()
    - attributes.class += ' text-black border-grey-300 bg-grey-300 hover_border-grey-500'
    +button()&attributes(attributes)

mixin button-purple()
    - attributes.class += ' text-pink-700 border-purple-50 bg-purple-50 hover_border-purple-100'
    +button()&attributes(attributes)
