mixin markdown(text='')
    | !{ self.md(text) }

mixin header()
    div(class=attributes.class)
        .w-full.lg_h-146.lg_container.lg_mx-auto.px-4.md_px-6.lg_px-28.grid.grid-cols-1.lg_grid-cols-2.gap-12
            .lg_order-2.py-14.lg_py-0.flex.flex-col.items-center.lg_items-start.justify-center.text-center.lg_text-left
                if attributes.title
                    h1.mb-6.text-7xl.font-bold= attributes.title
                if attributes.text
                    +markdown(attributes.text)
                .mt-10.flex.flex-col.md_flex-row.flex-wrap.gap-6
                    if attributes.button1
                        +button-primary(icon=attributes.button1.icon title=attributes.button1.title url=attributes.button1.url target=attributes.button1.target)
                    if attributes.button2
                        +button-secondary(icon=attributes.button2.icon title=attributes.button2.title url=attributes.button2.url target=attributes.button2.target)
            .lg_order-1
                if attributes.image
                    img.mx-auto.h-80.md_h-146.lg_h-fit.lg_w-full.object-contain(src=attributes.image)

mixin section()
    div(class=attributes.class)
        .w-full.lg_container.lg_mx-auto.py-10.md_py-14.lg_py-32.px-4.md_px-6.lg_px-28
            if attributes.title
                h2= attributes.title
            if attributes.text
                .px-4.md_px-6.lg_px-28.pb-8.text-center
                    +markdown(attributes.text)
            block

mixin button()
    -
        const btnClass = {
            'py-4 px-10': attributes.title,
            'p-4': !attributes.title,
            'pl-8': attributes.title && attributes.icon,
            'hover_!shadow-none': true,
            [attributes.class]: true
        }
        const iconClass = {
            'mr-2': attributes.title
        }

    a.button.inline-flex.items-center.justify-center.cursor-pointer.font-semibold.whitespace-nowrap.rounded-full.border-2.hover_bg-transparent(
        href=attributes.url
        target=attributes.target
        class=btnClass
    )&attributes(attributes)
        if attributes.icon
            img.h-6.w-6(src=attributes.icon class=iconClass)
        = attributes.title

mixin button-primary()
    - attributes.class += ' text-white border-black bg-black hover_text-black hover_border-black'
    +button()&attributes(attributes)

mixin button-secondary()
    - attributes.class += ' text-black border-white bg-white hover_border-white'
    +button()&attributes(attributes)

mixin button-grey()
    - attributes.class += ' text-black border-grey-300 bg-grey-300 hover_border-grey-500'
    +button()&attributes(attributes)

mixin button-purple()
    - attributes.class += ' text-pink-700 border-purple-50 bg-purple-50 hover_border-purple-100'
    +button()&attributes(attributes)
