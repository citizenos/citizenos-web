#header
    min-height 256px
    background-repeat no-repeat
    background-position center top
    background-size cover
    background-image url('/assets/images/donate-header.svg')

    h1
        font-size 36px
        font-weight bold
        line-height 48px
        text-align center

#text
    background-color #FFFFFF

#usage
    background-color #F7F7F7

    h2
        font-size 22px

    hr
        border-top 1px solid #E5E5E5

    .usage-bullet
        margin-right 20px
        padding-top 8px
        height 40px
        width 40px
        font-weight bold
        text-align center
        background #E596B7
        border-radius 50%

#how
    background-color #ECD7D6

    h2
        font-size 26px

    .how-box-title
        min-height 45px
        font-weight bold
        background #F6F6F6

    .how-box-text
        background #FFFFFF

        h4
            font-size: inherit
            margin: inherit
            color: #7C7C7C


#footer
    min-height 150px
    background #F7F7F7
    font-size 14px

.btn-pink
    padding 11px 21px
    line-height 18px
    font-weight bold
    border none
    border-radius 20px
    color #E596B7
    background #FFFFFF
    box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.1)
    white-space normal

    &:hover
        color black
        box-shadow 0 2px 10px 0 rgba(0, 0, 0, 0.1)

    &:active
        box-shadow inset 0 0 8px 0 rgba(0, 0, 0, 0.13)

@media only screen and (max-width: 576px)
    #header
        h1
            font-size 32px
            line-height 40px
