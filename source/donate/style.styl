#header
    min-height 256px
    background-repeat no-repeat
    background-position center top
    background-size cover
    background-image url('/images/donate-header.svg')

    h1
        font-size 36px
        font-weight bold
        line-height 48px
        text-align center

#text
    background-color #FFFFFF

#how
    background-color #F7F7F7

    h2
        font-size 22px

    h4
        font-size: inherit
        margin: inherit
        color: #7C7C7C

    hr
        border-top 1px solid #E5E5E5

    .how-bullet
        margin-right 20px
        padding-top 8px
        height 40px
        width 40px
        font-weight bold
        text-align center
        background #E596B7
        border-radius 50%

#footer
    min-height 150px
    background #F7F7F7
    font-size 14px

@media only screen and (max-width: 576px)
    #header
        h1
            font-size 32px
            line-height 40px
