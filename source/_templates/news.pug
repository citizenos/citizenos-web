extends /_templates/main.pug


block content
    - var date = new Date(self.date)
    - var dateStr = `${date.toLocaleDateString('en', { day: 'numeric' })} ${date.toLocaleDateString('en', { month: 'long' })} ${date.toLocaleDateString('en', { year: 'numeric' })}`

    .container.py-5
        .row
            .col-12.col-sm-8.offset-sm-2
                h1.text-center.my-5= self.title
                p.news-author.text-center.my-5.text-muted= dateStr + ' - ' + self.author
        .row
            article#news.col-12.col-sm-8.offset-sm-2
                +markdown(self.text)


block script
    script.
        $(function () {
            $('article img').addClass('img-fluid')
        })
