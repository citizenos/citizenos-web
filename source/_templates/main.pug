block vars


mixin markdown(text)
    | !{ self.md(text) }


- self.rootUrl = self.locale === 'en' ? '/' : `/${self.locale}/`


doctype html
html(lang=self.locale)
    head
        meta(charset='utf-8')
        if self.description
            meta(name='description' content=self.description)
        if self.keywords
            meta(name='keywords' content=self.keywords.join(','))

        meta(property='og:type', content='website')
        meta(property='og:url', content='https://citizenos.com' + self.path)
        meta(property='og:title', content=self.title ? self.title + ' · ' + self.siteTitle : self.siteTitle)
        if self.description
            meta(property='og:description' content=self.description)

        meta(name='viewport', content='width=device-width, initial-scale=1')

        title= self.title && self.title !== self.siteTitle ? self.title + ' · ' + self.siteTitle : self.siteTitle

        link(href='/assets/images/favicon.ico', rel='shortcut icon', type='image/x-icon')
        link(href='/assets/images/icon-hires.png', rel='icon', sizes='192x192', type='image/png')

        link(href='https://fonts.googleapis.com/css?family=Noto+Sans:400,400i,700,700i&amp;subset=cyrillic-ext,latin-ext' rel='stylesheet')
        link(href='/assets/css/bootstrap.min.css', rel='stylesheet')
        link(href='/style.css', rel='stylesheet')

        style
            block stylus

        script(src='/assets/js/jquery-3.3.1.min.js')
        script(async='', src='https://www.googletagmanager.com/gtag/js?id=UA-67049149-2')
        script.
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'UA-67049149-2');

        if self.locale === 'aa'
            script.
                var _jipt = []
                _jipt.push(['project', 'citizenos-web'])
                _jipt.push(['preload_texts', true])
                _jipt.push(['escape', function() {
                    window.location.href = 'https://citizenos.com'
                }])
            script(src='https://cdn.crowdin.com/jipt/jipt.js')
    body
        block body
            include navigation.pug

            .content
                block header
                block content

            include mailchimp.pug
            include footer.pug

        script(src='https://downloads.mailchimp.com/js/signup-forms/popup/unique-methods/embed.js', data-dojo-config='usePlainJson: true, isDebug: false')
        script(src='/assets/js/bootstrap.min.js')
        script(src='/script.js')

        script.
            $(function () {
                $('a[href="https://app.citizenos.com"]').attr('href', 'https://app.citizenos.com/#{self.locale}/')
            })

        block script
