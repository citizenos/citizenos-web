extends /_templates/main.pug


block content
    +appHelp()
    #help-content.container.mb-4.py-5
        .row
            .col-12.col-sm-6
                h1= self.title
                p= self.text

        #feedback-form.row.mb-4.pt-5
            h2.col-12= self.form.title
            form.col-12.col-sm-6(netlify, netlify-honeypot='bot-field', name='feedback')
                textarea.form-control.mb-3(name='message' rows=7 placeholder=self.form.message)
                input.form-control.mb-3(type='email' name='email' placeholder=self.form.email)
                input.d-none(name='bot-field')
                a#feedback-submit.feedback-btn.form-control(href='javascript:void(0)')= self.form.submit

        #feedback-success.row.mb-4.pt-5.d-none
            .col-12.col-sm-6
                .feedback-blue-box.col-12.mb-3.pt-5.pb-4.text-center
                    img.mb-3(src='/assets/images/help/icons/success.svg')
                    +markdown(self.form.success)
                a.form-control.feedback-btn(href=self.form.successBack.url)= self.form.successBack.title

        .row.pt-5
            .col-12
                .gray-box.col-12
                    .row
                        .col-12.col-sm-5.p-3
                            h2= self.help.search.title
                            form(action=self.help.search.url)
                                input#search.form-control(type='search' name='q' placeholder=self.help.search.placeholder)

                        .col-12.col-sm-7.p-3(style='border-left:1px solid #E5E5E5')
                            h2= self.help.alternate.title
                            ul.list-arrow.list-inline.mt-3.mb-0
                                li.list-inline-item
                                    a(href=self.help.alternate.request.url)= self.help.alternate.request.title
