extends /_templates/main.pug


block content
    .container.pb-5
        .row.pt-5
            .col-12
                h1= self.title
                +markdown(self.text)

        .row.pt-5
            .col-12.col-sm-6
                h2= self.help.search.title
                form
                    input.form-control(placeholder=self.help.search.placeholder)

            .col-12.col-sm-6
                h2= self.help.alternate.title
                a(href="#")= self.help.alternate.request
                a(href="#")= self.help.alternate.feedback
