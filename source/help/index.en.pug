extends /_templates/main.pug


block content
    .container.mb-4.pb-5
        .row.pt-5
            h1.col-12= self.title
            p.col-12= self.text

        .row.mb-4.pt-5
            h2.col-12= self.help.search.title
            form.col-12.col-sm-6
                input.form-control(placeholder=self.help.search.placeholder)

        .row.pt-5
            h2.col-12= self.help.topics
            each category in self.data.category
                .col-12.col-sm-6.col-md-3
                    a.gray-box.d-block.col-12.mb-4.py-3.text-center(href=category.path)
                        img.img-blue.mb-3(src='/assets/images/help/icons/' + category.icon + '.svg')
                        img.img-white.mb-3.d-none(src='/assets/images/help/icons/' + category.icon + '-white.svg')
                        br
                        | #{ category.title }

        .row.pt-5
            h2.col-12= self.links.title
            ul.list-arrow.list-unstyled.col-12
                each link in self.links.links
                    li
                        a(href=link.url)= link.title

        .row.pt-5
            .col-12
                .gray-box.col-12.p-3
                    h2= self.help.alternate.title
                    ul.list-arrow.list-inline.mb-0
                        li.list-inline-item
                            a(href="#")= self.help.alternate.request
                        li.list-inline-item
                            a(href="#")= self.help.alternate.feedback
